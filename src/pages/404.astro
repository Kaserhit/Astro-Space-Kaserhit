---
import Layout from "../layouts/Layout.astro"
---

<Layout title="404 Not Found">
  <div class="flex flex-col justify-center items-center">
      <h1 class="text-white text-2xl md:text-3xl text-center fade-in-out">This Page doesn't exist 😞 ...</h1>
      <h1 class="text-white text-2xl md:text-3xl text-center fade-in-out" style="animation-delay: 5s;">For now 😏 ...</h1>
      <img src="https://midu.dev/images/this-is-fine-404.gif" alt="404" class="w-full md:w-auto" style="padding-top: 50px;">
  </div>
</Layout>

<style>
.fade-in-out {
  opacity: 0;
  animation-fill-mode: forwards;
  animation-duration: 10s;
  animation-iteration-count: infinite; 
}

.fade-in-out:nth-of-type(1), .fade-in-out:nth-of-type(2) {
  animation-name: fadeOutFadeIn; 
}

@keyframes fadeOutFadeIn {
  0%, 100% { opacity: 0; }
  50% { opacity: 1; }
}

@media (max-width: 640px) {
  .text-2xl {
      font-size: 1.5rem; 
  }
}
</style>
